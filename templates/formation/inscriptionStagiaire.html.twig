{% extends 'base.html.twig' %}

{% block title %}Ajout Stagiaire{% endblock%}

{% block body %}
    <div>

        <section class="text-right w-25 m-auto position-fixed ">
            <p class="font-weight-bold">Inscription :</p><br>
            {{ form_start(formStagiaire) }}
            {{ form_row(formStagiaire.prenom, {'label': "Prénom : "}) }}
            {{ form_row(formStagiaire.nom, {'label': "Nom : "}) }}
            {{ form_row(formStagiaire.email, {'label': "Adresse email : "}) }}
            {{ form_row(formStagiaire.username, {'label': "Username : "}) }}
            {{ form_row(formStagiaire.civilite, {'label': 'Civilité : '}) }}
            {{ form_end(formStagiaire) }}
        </section>

        <section class="text-right w-50 m-auto position-sticky ">
            <p class="font-weight-bold">Machine :</p><br>
            {{ form_start(formMachine) }}
            {{ form_row(formMachine.nom, {'label': "Nom de machine : "}) }}
            {{ form_row(formMachine.username, {'label': "Utilisateur : "}) }}
            {{ form_row(formMachine.motdepasse, {'label': "Mot de passe : "}) }}
            {{ form_row(formMachine.passerelle, {'label': "Passerelle : "}) }}
            {{ form_end(formMachine) }}
            <input type="file" accept="text/csv">
            <button type="submit" class=" my-5 ">Ajouter</button>


        </section>
    </div>


    <section>
        <p>Utilisateurs inscrits</p>
        <table class="text-center table table-striped">
            <thead>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Username</th>
                <th>Civilite</th>
                <th>Nom Machine</th>
                <th>Utilisateur Machine</th>
                <th>MDP Machine</th>
                <th>Passerelle</th>
                <th>Sélection</th>
            </thead>
            <tbody>
                <td></td>
            </tbody>
        </table>
    </section>
    <section>
        <button type="button" class=" btn btn-outline-primary my-2 ">Retour</button>
        <a href="{{ path('home_formateur') }}" class="btn btn-outline-success my-2">Confirmer</a>
    </section>



{% endblock %}